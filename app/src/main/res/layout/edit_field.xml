<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_container"
    android:orientation="vertical"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@id/edit_container"
        app:layout_constraintLeft_toLeftOf="@id/edit_container"
        app:layout_constraintRight_toRightOf="@id/edit_container"/>

    <LinearLayout
        android:id="@+id/ln_field_name"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="@id/edit_container"
        app:layout_constraintRight_toRightOf="@id/edit_container"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:text="@string/tv_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_field_age"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ln_field_name"
        app:layout_constraintLeft_toLeftOf="@id/edit_container"
        app:layout_constraintRight_toRightOf="@id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_age"
            android:text="@string/tv_age"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_field_address"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ln_field_age"
        app:layout_constraintLeft_toLeftOf="@id/edit_container"
        app:layout_constraintRight_toRightOf="@id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_address"
            android:text="@string/tv_address"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>